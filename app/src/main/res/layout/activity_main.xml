<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="80dp">

        <TextView
                android:text="账号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:textSize="18sp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acountInput"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="-5dp"
                android:layout_alignBottom="@+id/textView3"/>

        <TextView
                android:text="密码："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="0dp"
                android:layout_alignStart="@+id/textView3"
                android:textSize="18sp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/passwordInput"
                android:layout_marginStart="0dp"
                android:layout_alignStart="@+id/acountInput"
                android:layout_marginEnd="0dp"
                android:layout_alignEnd="@+id/acountInput"
                android:layout_marginBottom="-5dp"
                android:layout_alignBottom="@+id/textView4"/>

        <TextView
                android:text="用户名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/textView4"
                android:layout_marginStart="0dp"
                android:layout_alignStart="@+id/textView4"
                android:textSize="18sp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userNameInput"
                android:layout_marginStart="0dp"
                android:layout_alignStart="@+id/passwordInput"
                android:layout_marginEnd="0dp"
                android:layout_alignEnd="@+id/passwordInput"
                android:layout_marginBottom="-5dp"
                android:layout_alignBottom="@+id/textView5"/>

        <TextView
                android:text="验证码："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/textView5"
                android:layout_marginStart="0dp"
                android:layout_alignStart="@+id/textView5"
                android:textSize="18sp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verifyInput"
                android:layout_marginStart="0dp"
                android:layout_alignStart="@+id/userNameInput"
                android:layout_marginEnd="0dp"
                android:layout_alignEnd="@+id/userNameInput"
                android:layout_marginBottom="-5dp"
                android:layout_alignBottom="@+id/textView6"/>

        <Button
                android:text="开始录音"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:id="@+id/statrtButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="163dp"
                android:visibility="visible"
                android:layout_alignParentStart="true"
                android:layout_marginStart="78dp"
                android:layout_below="@+id/verifyInput"/>

        <TextView
                android:text="录音状态：未开始"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:layout_below="@+id/statrtButton"
                android:layout_marginStart="25dp"
                android:layout_alignStart="@id/statrtButton"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_marginTop="40dp"
                android:text="暂无音频"
                android:visibility="visible"
                android:layout_below="@+id/verifyInput"
                android:layout_marginHorizontal="30dp"/>
    </RelativeLayout>

</RelativeLayout>